        </td>
        <td>
          <div class="col-md-10">
            <input asp-for="DeliveryDate" class="uk-input" type="date" value=@DateTime.Now.ToString("yyyy-MM-dd") />
            <span asp-validation-for="DeliveryDate" class="uk-alert-danger"></span>
          </div>
