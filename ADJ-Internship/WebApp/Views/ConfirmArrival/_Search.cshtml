@model ADJ.BusinessService.Dtos.ConfirmArrivalDtos;

@foreach (var item in ViewBag.VNPorts)
{
  <p class="vnPorts" hidden="hidden">@item</p>
}

@foreach (var item in ViewBag.HKPorts)
{
  <p class="hkPorts" hidden="hidden">@item</p>
}

  <div class="uk-grid">
    <div class="uk-width-2-3">
      <table class="uk-table uk-table-small uk-table-middle">
        <tr>
          <td>
            <label asp-for="FilterDtos.Origin"></label>
          </td>
          <td>
            <select asp-for="FilterDtos.Origin" asp-items="new SelectList(ViewBag.Origins)" class="uk-input filters" id="origin"></select>
            <span asp-validation-for="FilterDtos.Origin" class="uk-alert-danger"></span>
          </td>
          <td>
            <label asp-for="FilterDtos.Container"></label>
          </td>
          <td>
            <input asp-for="FilterDtos.Container" class="uk-input filters" />
            <span asp-validation-for="FilterDtos.Container" class="uk-alert-danger"></span>
          </td>
        </tr>
        <tr>
          <td>
            <label asp-for="FilterDtos.Mode"></label>
          </td>
          <td>
            <select asp-for="FilterDtos.Mode" class="uk-input filters ports"></select>
            <span asp-validation-for="FilterDtos.Mode" class="uk-alert-danger"></span>
          </td>
          <td>
            <label asp-for="FilterDtos.ETAFrom"></label>
          </td>
          <td>
            <input asp-for="FilterDtos.ETAFrom" class="uk-input filters" />
            <span asp-validation-for="FilterDtos.ETAFrom" class="uk-alert-danger"></span>
          </td>
        </tr>
        <tr>
          <td>
            <label asp-for="FilterDtos.Status"></label>
          </td>
          <td>
            <select asp-for="FilterDtos.Status" asp-items="new SelectList(ViewBag.Modes)" class="uk-input filters">
              <option selected value="">Any</option>
            </select>
            <span asp-validation-for="FilterDtos.Status" class="uk-alert-danger"></span>
          </td>
          <td>
            <label asp-for="FilterDtos.ETATo"></label>
          </td>
          <td>
            <select asp-for="FilterDtos.ETATo" asp-items="new SelectList(ViewBag.Statuses)" class="uk-input filters">
              <option selected value="">Any</option>
            </select>
            <span asp-validation-for="FilterDtos.ETATo" class="uk-alert-danger"></span>
          </td>
        </tr>
        <tr>
          <td>
            <label asp-for="FilterDtos.Vendor"></label>
          </td>
          <td>
            <input asp-for="FilterDtos.Vendor" class="uk-input filters" />
            <span asp-validation-for="FilterDtos.Vendor" class="uk-alert-danger"></span>
          </td>
        </tr>
      </table>
    </div>
    <div class="uk-width-1-3" style="text-align: center">
      <button type="submit" value="Search" class="uk-button uk-button-primary searchButton">Search</button>
    </div>
    <div class="uk-width-1-3" style="text-align: center">
      <button type="button" value="Achieve" class="uk-button uk-button-secondary searchButton">Achieve</button>
    </div>
  </div>
