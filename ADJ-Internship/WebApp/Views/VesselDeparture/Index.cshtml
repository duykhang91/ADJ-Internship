@model ADJ.Common.PagedListResult<ADJ.BusinessService.Dtos.ContainerDto>


<div class="vessel-right">

	<form asp-action="Index"
				asp-controller="VesselDeparture" method="get">
		@*header*@
		<div class="uk-grid uk-width-1-1 vessel-header">
			<div class="uk-width-2-5">

				<div class="uk-margin">
					<label class="uk-form-label vessel-header-label" for="form-horizontal-select">Origin</label>
					<div class="uk-form-controls vassell-header-formSelect" id="origin">

						<select name="origin" class="uk-select" id="form-horizontal-select">
							<option>VietNam</option>
							<option>HongKong</option>
						</select>

					</div>
				</div>

				<div class="uk-margin">
					<label class="uk-form-label vessel-header-label" for="form-horizontal-select">Origin Port</label>
					<div class="uk-form-controls vassell-header-formSelect" id="originPort">
						<select name="originPort" class="uk-select" id="form-horizontal-select">
							@foreach (var i in ViewBag.OriginPort)
							{
								<option>@i</option>
							}
						</select>

					</div>
				</div>

				<div class="uk-margin">
					<label class="uk-form-label vessel-header-label" for="form-horizontal-text">Container</label>
					<div class="uk-form-controls vassell-header-formSelect">
						<input class="uk-input" name="container" id="form-horizontal-text" type="text" placeholder="Some text...">
					</div>
				</div>

			</div>

			<div class="uk-width-2-5">

				<div class="uk-margin">
					<label class="uk-form-label vessel-header-label" for="form-horizontal-select">Status</label>
					<div class="uk-form-controls vassell-header-formSelect" id="status">
						<select class="uk-select" name="status" id="form-horizontal-select">
							<option>Pending</option>
							<option>Despatch</option>
						</select>
					</div>
				</div>

				<div class="uk-margin">
					<label class="uk-form-label vessel-header-label" for="form-horizontal-select">ETD From</label>
					<div class="uk-form-controls vassell-header-formSelect">
						<input id="etdFrom" type="date" class="uk-input">
					</div>
				</div>

				<div class="uk-margin">
					<label class="uk-form-label vessel-header-label" for="form-horizontal-select">ETD To</label>
					<div class="uk-form-controls vassell-header-formSelect">
						<input id="etdTo" type="date" class="uk-input">
					</div>
				</div>


			</div>
			<div class="uk-width-1-5">
				<p uk-margin>
					<button type="submit" class="uk-button uk-button-primary" style="color:white">
						@Html.ActionLink("Search", "Index", "VesselDeparture")<span uk-icon="search"></span>
					</button>
				</p>

				@*<p uk-margin>
						<button class="uk-button uk-button-danger">
								Achieve<span uk-icon="check"></span>
							</button>
						<button class="uk-button uk-button-danger">
							Achieve<span uk-icon="check"></span>
						</button>
					</p>*@
			</div>
		</div> @*end header*@
	</form>

	@if (Model.Items.Count == 0)
	{
		<h4>No matching results were found. Please try again</h4>
	}
	else
	{
		@*table 1*@
		@for(int i = 1; i <= Model.Items.Count;i++)
		{
			for(int j = i + 1; j <= Model.Items.Count;i++)
			{
				if (Model.Items[i].Carrier != Model.Items[j].Carrier)
				{

				}
			}
		}


		@foreach (var container in Model.Items)
		{



			<div class="uk-grid uk-width-1-1">
				<table class="uk-table table1">
					<thead>
						<tr>
							<th>Origin Port</th>
							<th>Dest Port</th>
							<th>Mode</th>
							<th>Carrier</th>
							<th>Voyage</th>
							<th>ETD</th>
							<th>ETA</th>
							<th>Transhipment</th>
						</tr>
					</thead>

					<tbody>
						<tr>
							<td>
								<div class="uk-form-controls">
									<div class="uk-form-controls vassell-header-formSelect" id="originPortChange">
										<select class="uk-select" name="originPortChange" id="form-horizontal-select">
											<option>Model.Items[1].OriginPort</option>
											@foreach (var i in ViewBag.OriginPort)
											{
												if (i != Model.Items[1].OriginPort)
												{
													<option>@i</option>
												}
											}
										</select>
									</div>
								</div>
							</td>
							<td>
								<div class="uk-form-controls">
									<div class="uk-form-controls vassell-header-formSelect" id="destChange">
										<select class="uk-select" name="destChange" id="form-horizontal-select">
											<option>Model.Items.PortOfDelivery</option>
											@foreach (var i in ViewBag.Dest)
											{
												if (i != Model.Items[1].DestPort)
												{
													<option>@i</option>
												}
											}
										</select>
									</div>
								</div>
							</td>
							<td>
								<div class="uk-form-controls">
									<div class="uk-form-controls vassell-header-formSelect" id="modeChange">
										<select class="uk-select" name="modeChange" id="form-horizontal-select">
											<option>Model.Items.Loading</option>
											@foreach (var i in ViewBag.Mode)
											{
												if (i != Model.Items[1].Loading)
												{
													<option>@i</option>
												}
											}
										</select>
									</div>
								</div>
							</td>
							<td>
								<div class="uk-form-controls">
									<div class="uk-form-controls vassell-header-formSelect" id="carrierChange">
										<select class="uk-select" name="carrierChange" id="form-horizontal-select">
											<option>Model.Items[1].Carrier</option>
											@foreach (var i in ViewBag.Carrier)
											{
												if (i != Model.Items[1].Carrier)
												{
													<option>@i</option>
												}
											}
										</select>
									</div>
								</div>
							</td>
							<td>
								<input class="uk-input" name="voyageChange" id="form-horizontal-text" type="text" value="@Model.Items[1].Voyage">
							</td>
							<td>@Model.Items[1].ETD</td>
							<td>@Model.Items[1].ETA</td>
						</tr>
					</tbody>
				</table>
			</div>

			@*table2*@
			<div class="uk-grid uk-width-1-2">
				<table class="uk-table">
					<thead>
						<tr>
							<th></th>
							<th>Container</th>
							<th>Size</th>
							<th>Status</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var i in Model.Items)
						{
							<tr>
								<td>
									<input type="checkbox" name="choiseContainer" />
								</td>
								<td>@i.Name</td>
								<td>@i.Size</td>
								<td>@i.Status</td>
							</tr>
						}

					</tbody>
				</table>
			</div>
		}

	}




</div>

